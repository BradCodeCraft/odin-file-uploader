<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>File Uploader</title>
    <link rel="stylesheet" href="/styles.css">  
  </head>

  <body>
    <%- include("../share/navigationBar.ejs") %>

    <div class="new-file-page page">
      <% if (locals.file) { %>
        <form 
          action="/files/<%= file.id %>" 
          method="post" 
          class="view-file-form form"
        >
          <label for="name">Name</label>
          <input type="text" name="name" id="name"value="<%= file.name %>" disabled /> 
        
          <label for="upload">Upload at</label>
          <input type="text" name="upload" id="upload" value="<%= file.uploadedAt %>" disabled />
        
          <label for="size">Size</label>
          <input type="number" name="size" id="size" value="<%= file.size %>" disabled />   

          <div class="form-buttons">
            <a 
              href="/files/<%= file.id %>/delete" 
              class="button-link delete"
              onclick="return confirm('Are you sure you want to delete this file?')"
            >
              Delete
            </a> 
          </div>        

          <div class="form-buttons">
            <a href="<%= file.downloadUrl %>" class="button-link">Download</a> 
            <a href="/files" class="button-link back">Back</a> 
          </div>        
        </form>
      <% } %>
    </div> 
  </body>
</html>
